Block ::= { DeclSet StmtSet }

DeclSet ::= Decl DeclSetP
DeclSetP ::= Decl DeclSetP | ğœ€

Decl ::= int Vars ; | bool Vars ;
Vars ::= id VarsP
VarsP ::= , id VarsP | ğœ€

StmtSet ::= Stmt StmtSetP
StmtSetP ::= ; Stmt StmtSetP | ğœ€

Stmt ::= id := StmtP
StmtP ::= Arith StmtNext

StmtNext ::= < A StmtNP | = A StmtNP | > A StmtNP | ğœ€

StmtNP ::= -> A : A | ğœ€

A ::= T A1
A1 ::= + T A1 | - T A1 | ğœ€

T ::= F T1
T1 ::= * F T1 | ğœ€

F ::= id | num | ( A )