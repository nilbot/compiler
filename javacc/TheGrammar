Block ::= { DeclSet StmtSet }

DeclSet ::= Decl DeclSetP
DeclSetP ::= Decl DeclSetP | 𝜀

Decl ::= int Vars ; | bool Vars ;
Vars ::= id VarsP
VarsP ::= , id VarsP | 𝜀

StmtSet ::= Stmt StmtSetP
StmtSetP ::= ; Stmt StmtSetP | 𝜀

Stmt ::= id := StmtP
StmtP ::= Arith StmtNext

StmtNext ::= < A StmtNP | = A StmtNP | > A StmtNP | 𝜀

StmtNP ::= -> A : A | 𝜀

A ::= T A1
A1 ::= + T A1 | - T A1 | 𝜀

T ::= F T1
T1 ::= * F T1 | 𝜀

F ::= id | num | ( A )